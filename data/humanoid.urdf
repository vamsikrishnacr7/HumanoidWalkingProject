<?xml version="1.0"?>
<robot name="simple_humanoid">

  <!-- Base Link - NOW THE PELVIS IS THIS! -->
  <link name="base_link">
    <inertial>
      <mass value="4.0"/>  <!-- Reduced mass -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.03" iyy="0.03" izz="0.02" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.25 0.35 0.15"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.25 0.35 0.15"/>
      </geometry>
    </collision>
  </link>

  <!-- ========== RIGHT LEG ========== -->
  <link name="right_thigh">
    <inertial>
      <mass value="4.0"/>
      <origin xyz="0 0 -0.20" rpy="0 0 0"/>
      <inertia ixx="0.06" iyy="0.06" izz="0.008" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 -0.20" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.40" radius="0.06"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.20" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.40" radius="0.06"/>
      </geometry>
    </collision>
  </link>

  <link name="right_shin">
    <inertial>
      <mass value="2.5"/>
      <origin xyz="0 0 -0.20" rpy="0 0 0"/>
      <inertia ixx="0.04" iyy="0.04" izz="0.005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 -0.20" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.40" radius="0.05"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0 0 -0.20" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.40" radius="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- RIGHT FOOT - CRITICAL FIX -->
  <link name="right_foot">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <inertia ixx="0.002" iyy="0.004" izz="0.002" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.24 0.12 0.04"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.24 0.12 0.04"/>
      </geometry>
    </collision>
  </link>

  <!-- Right Hip - Connected to base_link (not pelvis) -->
  <joint name="right_hip" type="revolute">
    <parent link="base_link"/>
    <child link="right_thigh"/>
    <origin xyz="0 -0.12 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.5" upper="1.2" effort="200" velocity="10"/>
    <dynamics damping="3.0" friction="1.0"/>
  </joint>

  <joint name="right_knee" type="revolute">
    <parent link="right_thigh"/>
    <child link="right_shin"/>
    <origin xyz="0 0 -0.40" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="2.2" effort="150" velocity="10"/>
    <dynamics damping="2.0" friction="1.0"/>
  </joint>

  <!-- RIGHT ANKLE - at bottom of shin -->
  <joint name="right_ankle" type="revolute">
    <parent link="right_shin"/>
    <child link="right_foot"/>
    <origin xyz="0 0 -0.42" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.4" upper="0.4" effort="80" velocity="10"/>
    <dynamics damping="1.5" friction="0.8"/>
  </joint>

  <!-- ========== LEFT LEG ========== -->
  <link name="left_thigh">
    <inertial>
      <mass value="4.0"/>
      <origin xyz="0 0 -0.20" rpy="0 0 0"/>
      <inertia ixx="0.06" iyy="0.06" izz="0.008" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 -0.20" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.40" radius="0.06"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.20" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.40" radius="0.06"/>
      </geometry>
    </collision>
  </link>

  <link name="left_shin">
    <inertial>
      <mass value="2.5"/>
      <origin xyz="0 0 -0.20" rpy="0 0 0"/>
      <inertia ixx="0.04" iyy="0.04" izz="0.005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 -0.20" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.40" radius="0.05"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0 0 -0.20" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.40" radius="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- LEFT FOOT - CRITICAL FIX -->
  <link name="left_foot">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <inertia ixx="0.002" iyy="0.004" izz="0.002" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.24 0.12 0.04"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.24 0.12 0.04"/>
      </geometry>
    </collision>
  </link>

  <!-- Left Hip - Connected to base_link (not pelvis) -->
  <joint name="left_hip" type="revolute">
    <parent link="base_link"/>
    <child link="left_thigh"/>
    <origin xyz="0 0.12 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.2" upper="0.5" effort="200" velocity="10"/>
    <dynamics damping="3.0" friction="1.0"/>
  </joint>

  <joint name="left_knee" type="revolute">
    <parent link="left_thigh"/>
    <child link="left_shin"/>
    <origin xyz="0 0 -0.40" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="2.2" effort="150" velocity="10"/>
    <dynamics damping="2.0" friction="1.0"/>
  </joint>

  <!-- LEFT ANKLE - MATCHED to right -->
  <joint name="left_ankle" type="revolute">
    <parent link="left_shin"/>
    <child link="left_foot"/>
    <origin xyz="0 0 -0.42" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.4" upper="0.4" effort="80" velocity="10"/>
    <dynamics damping="1.5" friction="0.8"/>
  </joint>

</robot>